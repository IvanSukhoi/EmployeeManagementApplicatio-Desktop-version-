<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EmployeeManagement.UI.Settings.Styles">
    
    <Style TargetType="GroupBox" x:Key="BasicGroupBoxStyle">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="BasicStackPanelStyle">
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style TargetType="RadioButton" x:Key="BasicRadioButtonStyle">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
    
</ResourceDictionary>