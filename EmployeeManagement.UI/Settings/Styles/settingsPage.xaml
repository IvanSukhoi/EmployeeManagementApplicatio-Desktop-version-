<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="GroupBox" x:Key="BasicGroupBoxStyle">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="BasicStackPanelStyle">
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style TargetType="RadioButton" x:Key="BasicRadioButtonStyle">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="BasicPopupTextBlock">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
   <Style TargetType="Border" x:Key="BasicPopupBorder">
       <Setter Property="Margin" Value="5"/>
       <Setter Property="Padding" Value="5"/>
       <Setter Property="BorderThickness" Value="1"/>
       <Setter Property="CornerRadius" Value="10"/>
   </Style>
    
    <Style TargetType="Popup" x:Key="PopupStyle">
        <Setter Property="StaysOpen" Value="False"/>
        <Setter Property="Placement" Value="Mouse"/>
        <Setter Property="MaxWidth" Value="250"/>
        <Setter Property="AllowsTransparency" Value="True"/>
    </Style>
    
</ResourceDictionary>