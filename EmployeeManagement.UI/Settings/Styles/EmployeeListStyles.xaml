<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="TextBlock" x:Key="BasicTextBlockControls">
        <Setter Property="Margin" Value="15"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style TargetType="Run" x:Key="RunStyleControl">
        <Setter Property="FontSize" Value="15"/>
    </Style>
    
    <Style TargetType="Border" x:Key="BasicBorderListBoxStyle">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="1"/>
        <Setter Property="Width" Value="170"/>
    </Style>
    
    <Style TargetType="Button" x:Key="BasicButtonStyleControls">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="BorderBrush" Value="Aqua"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Verdana"/>
    </Style>

    <Style TargetType="Grid" x:Key="BasicGridControls">
        <Setter Property="Margin" Value="3"/>
    </Style>

</ResourceDictionary>